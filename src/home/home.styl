.page-header
  background: #F1F1F1
  padding: 1em
  .heading
    color: #1288EF
    cursor: pointer
main
  width: 100%
  display: flex
  flex-direction: column
  .chart
    position: relative
    flex-grow: 1
    display: flex;
    flex-grow: 1;
    flex-direction: column;
    align-items: stretch;
    & > svg
      width: 100%
      flex-grow: 1
  .sample-matches
    margin: 6px 16px 16px
    .caption
      display: inline
      margin: 0
      font-weight: 500
      font-size: 11px
      text-indent: 8px
    .match
      display: inline-block
      list-style-type: disc
      &.v-link-active
        cursor: default
      &:not(:last-child)
        margin-right: 8px
  .match
    cursor: pointer
    &:hover
      text-shadow: 1px 1px 3px #D9E7EF
  .package-name
    font-weight: 500
    transition: color 1s
  .vs
    font-size: 12px
  .no-packages-selected
    flex-grow: 1
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
footer
  padding: 1em 16px 0.5em
  display: flex
  justify-content: space-between
  color: #8D90A4
  .about
    font-size: 10px
    margin: 0
    .copyright
      margin: 0
  .disclaimer
    font-size: 10px
  @media (max-width: 600px)
    padding: 5px 16px 4px