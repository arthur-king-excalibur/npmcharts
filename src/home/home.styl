.page-header
  padding: 1em
  background: #F1F1F1
  border-bottom: 1px solid #ccc
  box-sizing: border-box
  flex-shrink: 0
  .heading
    line-height: 0.8
    margin-top: 10px
    margin-bottom: 14px
    .identity
      font-size: 14px
      font-size: 35px
      margin-bottom: 2px
      font-weight: 600
      color: #333
      text-decoration: none
      cursor: pointer
      display: inline-block
      color: #1288EF
    .link-home
      color: #1288EF
      font-size: 16px
      font-weight: 600
      @media (max-width: $small)
        font-size: 22px
  .sub-heading
    color: #8F9FBC
    margin: 0
    font-size: 16px
    display: block
    line-height: 1.2
    @media (max-width: $small)
      font-size: 14px
      margin-top: 6px
  .graph-config
    font-size: 12px
    float: right
    display: inline-flex
    align-items: center
    .outliers-explanation
      display: inline-flex
      margin-left: 0.3em
      position: relative
      padding-top: 3px
      padding-bottom: 3px
      cursor: help
      &:not(:hover)
        .icon-help
          fill: #8BA5DB
        .explanation-text
          display: none
      .icon-help
        width: 12px
        height: 12px
        fill: #AFAFAF
      .explanation-text
        position: absolute
        right: 0
        top: 2em
        width: 16em
        padding: 1em
        background: #fff
        border-radius: 3px
        border: 1px solid #EDEDED
  .include-item
    user-select: none
    margin-left: 0.3em
    cursor: pointer
    @media (max-width: $small)
      font-size: 10px
  .package-input
    line-height: 1.5
    text-indent: 4px
  .add-package-btn
    vertical-align: middle
    padding: 4px 6px;
  .github-btn
    vertical-align: middle
main
  width: 100%
  display: flex
  flex-direction: column
  transition: opacity 0.15s
  &.loading
    opacity: 0.3
  .chart
    position: relative
    flex-grow: 1
    display: flex;
    flex-grow: 1;
    flex-direction: column;
    align-items: stretch;
    & > svg
      width: 100%
      flex-grow: 1
  .sample-matches
    margin: 6px 16px 12px
    @media (max-width: $small)
      font-size: 12px
    .caption
      display: inline
      margin: 0
      font-weight: 500
      font-size: 11px
      text-indent: 8px
    .matches
      display: inline
      margin-left: 4px
    .match
      display: inline-block
      list-style-type: disc
      &.v-link-active
        cursor: default
      &:not(:last-child)
        margin-right: 11px
      @media (max-width: $small)
        &:nth-child(n+3)
          display: none
  .match
    cursor: pointer
    &:hover:not(.v-link-active)
      text-shadow: 1px 1px 3px #D9E7EF
  .package-name
    font-weight: 500
    transition: color 1s
  .vs
    font-size: 12px
    margin: 0 -1px
  .no-packages-selected
    flex-grow: 1
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
footer
  padding: 1em 16px 0.5em
  display: flex
  justify-content: space-between
  color: #8D90A4
  .about
    font-size: 10px
    margin: 0
    .created-by
      color: inherit
      margin: 0
  .disclaimer
    font-size: 10px
  @media (max-width: $small)
    padding: 5px 16px 4px