main
  width: 100%
  display: flex
  flex-direction: column
  .chart
    position: relative
    flex-grow: 1
    display: flex;
    flex-grow: 1;
    flex-direction: column;
    align-items: stretch;
    & > svg
      width: 100%
      flex-grow: 1
  .info-panel
    z-index: 2
    background-color: rgba(white, 0.7)
    display: flex
    flex-direction: row
    margin-top: 10px
    .sample-comparisons
      .heading
        margin: 0
        font-size: 16px
        text-indent: 8px
      .group
        display: inline-block
        list-style-type: disc
        cursor: pointer
        &.v-link-active
          cursor: default
        &:not(:last-child)
          margin-right: 8px
        &:hover
          text-shadow: 1px 1px 3px #D9E7EF
        .package-name
          font-weight: 500
        .vs
          font-size: 12px

footer
  padding: 1em 16px 0.5em
  display: flex
  justify-content: space-between
  color: #8D90A4
  .about
    font-size: 10px
    margin: 0
    .copyright
      margin: 0
  .disclaimer
    font-size: 10px
  @media (max-width: 600px)
    padding: 5px 16px 4px